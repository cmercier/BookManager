<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bookmanager.chalmers.edu.bookmanager.CreateBookActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:id="@+id/textViewAuthor"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course:"
        android:id="@+id/textViewCourse"
        android:layout_below="@+id/textViewAuthor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/textViewCourse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN:"
        android:id="@+id/textViewISBN"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewCourse"
        android:layout_toEndOf="@+id/textViewCourse"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameAuthor"
        android:layout_alignTop="@+id/textViewAuthor"
        android:layout_alignLeft="@+id/textViewNameTitle"
        android:layout_alignStart="@+id/textViewNameTitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameCourse"
        android:layout_alignTop="@+id/textViewCourse"
        android:layout_alignLeft="@+id/textViewNameTitle"
        android:layout_alignStart="@+id/textViewNameTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNamePrice"
        android:layout_alignTop="@+id/textViewPrice"
        android:layout_alignLeft="@+id/textViewNameTitle"
        android:layout_alignStart="@+id/textViewNameTitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameISBN"
        android:layout_alignTop="@+id/textViewISBN"
        android:layout_alignLeft="@+id/textViewNameTitle"
        android:layout_alignStart="@+id/textViewNameTitle" />

</RelativeLayout>
